<%- include('../partials/header.ejs') %>
<div class="register">
  <form action="/account/register/create" method="POST">
    <div>
      <h3>Daftar Sekarang</h3>
    </div>
    <%- include('../partials/alert.ejs') %>
    <div>
      <input
        type="text"
        name="username"
        class="text_field"
        placeholder="Username"
        required
      />
    </div>
    <div>
      <input
        type="email"
        name="email"
        class="text_field"
        placeholder="Email"
        required
      />
    </div>
    <div>
      <input
        type="password"
        name="password"
        class="text_field"
        placeholder="Sandi"
        required
      />
    </div>
    <div>
      <input
        type="password"
        name="passConfirm"
        class="text_field"
        placeholder="Konfirmasi Sandi"
        required
      />
    </div>
    <div>
      <input class="btn btn-danger" type="submit" value="Masuk" />
    </div>
  </form>
  <a class="btn btn-info" href="/account/login">Login</a>
</div>

